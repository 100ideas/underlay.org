{
	"compilerOptions": {
		"allowJs": false,
		"alwaysStrict": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"@underlay/pipeline/*": ["./node_modules/@underlay/pipeline/lib/blocks/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", ".next"]
}
